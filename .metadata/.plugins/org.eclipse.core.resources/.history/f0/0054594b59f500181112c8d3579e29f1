package cn.sort.innerType;

import java.util.Arrays;

/**
 * ≈≈–Ú
 * @author tree
 *
 */
public class Utils {
	/*
	 * ’Î∂‘ ˝æ›≈≈–Ú
	 */
	public static void sort(Object[] arr) {
		boolean sorted = true;
		int len = arr.length;
		for(int j=0;j<len;j++){
			sorted = true;
			for(int i=0;i<len-1-j;j++){
				if(((Comparable)arr[i]).compareTo(arr[i+1])>0){
					Object temp = arr[i];
					arr[i]= arr[i+1];
					arr[i+1] = temp;
					sorted = false;
				}
				System.out.println(Arrays.toString(arr));
			}
			if(sorted){
				break; 
			}
		}
	}
}
