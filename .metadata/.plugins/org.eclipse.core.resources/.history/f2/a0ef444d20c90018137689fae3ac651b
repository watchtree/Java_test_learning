package cn.sxt.oo2;

/**
 * 测试封装
 * @author tree
 *
 */
public class TestEncapsulation {
	public static void main(String[] args) {
		Human h = new Human();
//		h.age = 13;//此时不能改动age
		h.name = "wtt";
	}
}

class Human{
	private int age;//私有属性，自身可见，自类可用，子类不可用
	
	String name; //同一个包可用
	void sayAge(){
		System.out.println(age);
	}
}

class Boy extends Huamn{
	void sayHello(){
//		System.out.println(age);//包含父类属性但是不可用私有属性
	}
}